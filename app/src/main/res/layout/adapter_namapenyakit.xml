<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="#ffffffff"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/actmain_dimen_opimg_incard_wh"
            android:layout_height="@dimen/actmain_dimen_opimg_incard_wh"
            android:id="@+id/adapter_id_imgnamapenyakit"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/adapter_id_namapenyakit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:layout_gravity="center|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>